<p id="notice"><%= notice %></p>

<h1>Menu</h1>

<div class="row">
  <div class="col-lg-6">
    <%= render 'food_category' %>
    <%= render 'food_list' %>
  </div>
  <div class="col-lg-6">
    <%= render 'food_searcher' %>
    
    <% @selectedFood.each do |sf| %>
      <div class="card">
        <%= image_tag sf.image_url, class: "card-img-top center-block img-responsive", alt: sf.name %> 
        <div class="card-block">
          <h4 class="card-title"><%= sf.name %></h4>
          <p class="card-text"><%= sf.desc %></p>
          <a href="#" class="btn btn-primary">Create order</a>
          <%= link_to 'Add comment', new_review_path(:food => sf), :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <% @reviews.each do |r| %>
        <div class="card">
          <div class="card-block">
            <%= render 'rating_stars', :rate => r.rate %>
            <p class="card-text"><%= r.comment %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Food', new_food_path %>
